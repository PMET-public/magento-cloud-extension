{
  "name": "Magento Cloud Extension",
  "short_name": "mce",
  "version": "0.0.7",
  "manifest_version": 2,
  "description": "Collection of tools to help Magento Solution Consultants",
  "icons": {
    "16": "images/cloud-16.png",
    "48": "images/cloud-48.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "crx-hotreload/hot-reload.js",
      "scripts/background.js",
      "image-downloader/scripts/defaults.js"
    ]
  },
  "permissions": [
    "activeTab",
    "background",
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "cookies",
    "declarativeContent",
    "downloads",
    "https://*.magentosite.cloud/*",
    "https://github.com/*",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.magentosite.cloud/*",
        "https://*.the1umastory.com/*"
      ],
      "js": [
        "scripts/jquery-3.3.1.min.js",
        "scripts/jquery.tablesorter.js",
        "scripts/document-start.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/cloud-disabled-16.png",
      "24": "images/cloud-disabled-24.png",
      "32": "images/cloud-disabled-32.png",
      "48": "images/cloud-disabled-48.png"
    },
    "default_title": "Magento Cloud",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/cloud-48.png"
  ]
}
