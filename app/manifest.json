{
  "name": "Magento Cloud Extension",
  "short_name": "mce",
  "version": "0.0.40",
  "manifest_version": 3,
  "description": "Collection of tools to help Magento Solution Consultants",
  "icons": {
    "16": "images/cloud-16.png",
    "48": "images/cloud-48.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "scripts/background.processed.js"
  },
  "permissions": [
    "management",
    "activeTab",
    "background",
    "browsingData",
    "clipboardWrite",
    "contentSettings",
    "declarativeContent",
    "downloads",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.magentosite.cloud/*",
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://demo.magento.cloud/*"
      ],
      "js": [
        "scripts/content.processed.js"
      ],
      "css": [
        "styles/content.css",
        "styles/import-cloud-ui.css"
      ],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "*://demo.magento.cloud/*"
      ],
      "js": [
        "scripts/content.processed.js"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
      "default_title": "Magento Cloud",
      "default_icon": {
        "16": "images/cloud-disabled-16.png",
        "24": "images/cloud-disabled-24.png",
        "32": "images/cloud-disabled-32.png",
        "48": "images/cloud-disabled-48.png"
      },
      "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "images/cloud-48.png",
      "scripts/injected.processed.js"
    ],
    "matches": [
      "<all_urls>"
    ]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
