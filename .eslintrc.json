{
  "env": {
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "MemberExpression": "off"
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "curly": [
      "error",
      "all"
    ],
    "spaced-comment": [
      "error",
      "always"
    ],
    "brace-style": [
      "error",
      "1tbs"
    ],
    "one-var": [
      "error",
      "consecutive"
    ],
    "space-infix-ops": "error",
    "keyword-spacing": "error",
    "space-before-blocks": "error",
    "no-multi-spaces": "error",
    "no-trailing-spaces": "error",
    "no-unused-vars": "off",
    "no-var": "error",
    "no-console": "off",
    "no-undef": "off",
    "prefer-destructuring": [
      "error",
      {
        "array": true,
        "object": true
      },
      {
        "enforceForRenamedProperties": false
      }
    ]
  }
}