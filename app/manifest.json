{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "alarms",
    "background",
    "bookmarks",
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "cookies",
    "declarativeContent",
    "downloads",
    "downloads.open",
    "downloads.shelf",
    "geolocation",
    "history",
    "https://*.magentosite.cloud/*",
    "notifications",
    "pageCapture",
    "proxy",
    "sessions",
    "storage",
    "tabCapture",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.magentosite.cloud/*"
      ],
      "js": [
        "scripts/jquery-3.3.1.js",
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "omnibox": {
    "keyword": "OMNIBOX-KEYWORD"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "mc chrome ext",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon-48.png"
  ]

}
