{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "https://*.magentosite.cloud/*",
    "background",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "cookies",
    "*://*.google.com/",
    "debugger",
    "history",
    "idle",
    "management",
    "notifications",
    "pageCapture",
    "topSites",
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "accessibilityFeatures.modify",
    "accessibilityFeatures.read",
    "activeTab",
    "activityLogPrivate",
    "alarms",
    "autotestPrivate",
    "bookmarkManagerPrivate",
    "browsingData",
    "chromePrivate",
    "chromeosInfoPrivate",
    "cloudPrintPrivate",
    "commandLinePrivate",
    "copresence",
    "copresencePrivate",
    "declarativeContent",
    "desktopCapture",
    "downloads",
    "downloads.open",
    "downloads.shelf",
    "dial",
    "enterprise.platformKeys",
    "enterprise.platformKeysPrivate",
    "feedbackPrivate",
    "fileBrowserHandler",
    "fileBrowserPrivate",
    "fontSettings",
    "gcm",
    "geolocation",
    "hotwordPrivate",
    "identity",
    "identity.email",
    "input",
    "inputMethodPrivate",
    "location",
    "logPrivate",
    "mediaPlayerPrivate",
    "metricsPrivate",
    "mdns",
    "nativeMessaging",
    "networkingPrivate",
    "echoPrivate",
    "plugin",
    "preferencesPrivate",
    "principalsPrivate",
    "privacy",
    "processes",
    "proxy",
    "readingListPrivate",
    "sessions",
    "streamsPrivate",
    "system.cpu",
    "system.memory",
    "system.storage",
    "system.display",
    "systemPrivate",
    "tabCapture",
    "terminalPrivate",
    "unlimitedStorage",
    "virtualKeyboardPrivate",
    "webstorePrivate",
    "printerProvider",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.magentosite.cloud/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "omnibox": {
    "keyword": "OMNIBOX-KEYWORD"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "mc chrome ext",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon-48.png"
  ]

}
